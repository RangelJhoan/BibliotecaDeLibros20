<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.administrador.AdminActualizarLibroFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAgregarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Actualizar Libro"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#9A5C02" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Nombre Libro"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etAutor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Autor del libro"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etCantidadLibros"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Cantidad de libros"
            android:inputType="number"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etUrlLibro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Url Libro"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etImagen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Imagen del libro"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="DescripciÃ³n"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnAgregarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/design_orange_button"
            android:padding="12dp"
            android:text="Actualizar Libro"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>