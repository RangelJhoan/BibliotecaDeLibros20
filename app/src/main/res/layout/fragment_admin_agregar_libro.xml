<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragments.administrador.AdminAgregarLibroFragment">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        layout="@layout/toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="9">

        <TextView
            android:id="@+id/tvAgregarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Libro"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#9A5C02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAgregarLibro" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/design_background_gray"
            android:hint="Nombre Libro"
            android:textSize="15sp"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <EditText
            android:id="@+id/etAutor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/design_background_gray"
            android:hint="Autor del libro"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etNombre" />

        <EditText
            android:id="@+id/etCantidadLibros"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Cantidad de libros"
            android:inputType="number"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAutor" />

        <EditText
            android:id="@+id/etUrlLibro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Url Libro"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCantidadLibros" />

        <EditText
            android:id="@+id/etImagen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:background="@drawable/design_background_gray"
            android:hint="Imagen del libro"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCantidadLibros" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/design_background_gray"
            android:hint="DescripciÃ³n"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF" />

        <Button
            android:id="@+id/btnAgregarLibro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/design_orange_button"
            android:padding="12dp"
            android:text="Agregar Libro"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etContenidoCompleto" />

    </LinearLayout>

</LinearLayout>