<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".view.activities.registro.RegistrarseActivity">

        <TextView
            android:id="@+id/tvCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Crea Tu Cuenta"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Disfruta miles de libros en la palma\n de tu mano"
            android:textColor="#4DFFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/design_background_gray"
            android:hint="Nombre Completo"
            android:inputType="textCapWords"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#4DFFFFFF"
            android:textColorHint="#4DFFFFFF"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCorreo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/design_background_gray"
                android:hint="Correo Electrónico"
                android:inputType="textEmailAddress"
                android:paddingStart="30dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/design_background_gray"
            android:hint="Número Teléfono"
            android:inputType="number"
            android:maxLength="10"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:background="@drawable/design_background_gray"
            android:hint="Dirección"
            android:inputType="textCapSentences"
            android:paddingStart="30dp"
            android:textColorHint="#4DFFFFFF" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#4DFFFFFF"
            android:textColorHint="#4DFFFFFF"
            app:endIconMode="password_toggle"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/design_background_gray"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:maxLength="15"
                android:paddingStart="30dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:background="@drawable/design_orange_button"
            android:padding="12dp"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:text="¿Tienes cuenta? Inicia Sesión" />

    </LinearLayout>

</ScrollView>